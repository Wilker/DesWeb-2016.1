<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ticket</servlet-name>
        <servlet-class>ticketWeb.ticket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarUsuario</servlet-name>
        <servlet-class>servlets.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUsuario</servlet-name>
        <servlet-class>servlets.LoginUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdicionarCarrinho</servlet-name>
        <servlet-class>servlets.AdicionarCarrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessarCarrinho</servlet-name>
        <servlet-class>servlets.ProcessarCarrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FiltrarCidade</servlet-name>
        <servlet-class>servlets.FiltrarCidade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncerrarSessao</servlet-name>
        <servlet-class>servlets.EncerrarSessao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinalizaCompra</servlet-name>
        <servlet-class>servlets.FinalizaCompra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ticket</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarUsuario</servlet-name>
        <url-pattern>/CadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUsuario</servlet-name>
        <url-pattern>/LoginUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdicionarCarrinho</servlet-name>
        <url-pattern>/AdicionarCarrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessarCarrinho</servlet-name>
        <url-pattern>/ProcessarCarrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FiltrarCidade</servlet-name>
        <url-pattern>/FiltrarCidade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncerrarSessao</servlet-name>
        <url-pattern>/EncerrarSessao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinalizaCompra</servlet-name>
        <url-pattern>/FinalizaCompra</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
